<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
		Width="300" 
		Height="500"
        x:Class="Linko.MainWindow"
        Title="Linko"
		Background="LightBlue">
	    
	<StackPanel>

		<TextBox
		 Name="screen"	
	     Margin="30"
		 Height="300">
		</TextBox>

		<Button Name="con"
			    HorizontalAlignment="Center"
				Margin="0 -80 0 50"
				Background="Indigo"
				Foreground="White"
				Padding="15 8 15 8"
				CornerRadius="20"
				FontSize="12"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				> Connect </Button>
		<Grid
		Margin="30 -20 30 0 "	
		ShowGridLines="false"	
		ColumnDefinitions="190 60"
		RowDefinitions="auto">
		<TextBox
			Name="message"
			VerticalAlignment="Center"
			Margin="0 0 10 0"
			Grid.Column="0"
			Grid.Row="0"></TextBox>
		<Button
			Name="send"
			FontSize="12"
			Background="Indigo"
			Foreground="White"
			VerticalAlignment="Center"
			Grid.Column="1"
			Grid.Row="0">Send</Button>	
		</Grid>

		<TextBox
			Name="status"
			Margin="30 15 30 30"
			Height="80"
			Foreground="Indigo"
			Background="Transparent"
			BorderBrush="Transparent"
			VerticalContentAlignment="Top"
			HorizontalContentAlignment="Center">asdasddasddasdas</TextBox>
	</StackPanel>
	
 </Window>
